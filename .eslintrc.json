{
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "plugins": ["node", "promise"],
  "env": {
    "node": true,
    "mocha": true
  },
  "rules": {
    "semi": [2, "always"],
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "no-constant-condition": 0,
    "promise/param-names": 2,
    "promise/always-return": 2,
    "promise/catch-or-return": 2,
    "promise/no-native": 0
  },
  "globals": {
    "browser": true
  }
}
